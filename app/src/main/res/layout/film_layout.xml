<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBack">

    <ScrollView
        android:layout_width="362dp"
        android:layout_height="642dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="228dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/time" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="15dp"
                android:layout_height="16dp"
                app:layout_constraintEnd_toEndOf="@+id/textFilmLayoutRating"
                app:layout_constraintHorizontal_bias="0.451"
                app:layout_constraintStart_toStartOf="@+id/textFilmLayoutRating"
                app:layout_constraintTop_toBottomOf="@+id/textFilmLayoutRating"
                app:srcCompat="@drawable/star" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="14dp"
                android:layout_height="13dp"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="136dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/calendar" />

            <View
                android:id="@+id/view2"
                android:layout_width="216dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="@+id/textFilmLayoutGenre"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textFilmLayoutGenre"
                app:layout_constraintTop_toBottomOf="@+id/textFilmLayoutGenre" />

            <View
                android:id="@+id/view"
                android:layout_width="216dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="@+id/textFilmLayoutDirector"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textFilmLayoutDirector"
                app:layout_constraintTop_toBottomOf="@+id/textFilmLayoutDirector" />

            <View
                android:id="@+id/view3"
                android:layout_width="216dp"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="@+id/textFilmLayoutCountry"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textFilmLayoutCountry"
                app:layout_constraintTop_toBottomOf="@+id/textFilmLayoutDirector" />


            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="invisible"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.727"
                tools:visibility="invisible" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:letterSpacing="0.05"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.712" />

            <TextView
                android:id="@+id/textFilmLayoutPlot"
                android:layout_width="219dp"
                android:layout_height="197dp"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:gravity="fill_horizontal"
                android:justificationMode="inter_word"
                android:letterSpacing="0.05"
                android:text="Introduction"
                android:textColor="@color/colorAccent"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView33"
                app:layout_constraintTop_toBottomOf="@+id/textView33"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textFilmLayoutDirector"
                android:layout_width="217dp"
                android:layout_height="21dp"
                android:text="director"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:letterSpacing="0.05"
                android:autoSizeTextType="uniform"
                android:breakStrategy="balanced"
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textMovieTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textMovieTitle"
                app:layout_constraintTop_toBottomOf="@+id/textMovieTitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textFilmLayoutCountry"
                android:layout_width="216dp"
                android:layout_height="17dp"
                android:text="country"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:autoSizeTextType="uniform"
                android:breakStrategy="balanced"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:letterSpacing="0.05"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/view"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/view"
                app:layout_constraintTop_toBottomOf="@+id/textFilmLayoutDirector"
                app:layout_constraintVertical_bias="0.047" />

            <TextView
                android:id="@+id/textFilmLayoutRating"
                android:layout_width="46dp"
                android:layout_height="66dp"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:gravity="fill_vertical"
                android:letterSpacing="0.05"
                android:rotation="-90"
                android:text="rating"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.085"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.345" />

            <TextView
                android:id="@+id/textFilmLayoutRuntime"
                android:layout_width="53dp"
                android:layout_height="90dp"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:gravity="left|fill_vertical"
                android:letterSpacing="0.05"
                android:rotation="-90"
                android:text="time"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textFilmLayoutRating"
                app:layout_constraintHorizontal_bias="0.714"
                app:layout_constraintStart_toStartOf="@+id/textFilmLayoutRating"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.233" />

            <TextView
                android:id="@+id/textMovieTitle"
                android:layout_width="216dp"
                android:layout_height="29dp"
                android:fontFamily="@font/pt_sans_caption_bold"
                android:gravity="left"
                android:letterSpacing="0.05"
                android:text="title"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:autoSizeTextType="uniform"
                android:breakStrategy="balanced"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.267"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.558" />

            <TextView
                android:id="@+id/textFilmLayoutYear"
                android:layout_width="51dp"
                android:layout_height="73dp"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:gravity="fill_vertical"
                android:letterSpacing="0.05"
                android:orientation="vertical"
                android:rotation="-90"
                android:text="year"
                android:textColor="@color/colorPrimary"
                android:textSize="11sp"
                app:layout_constraintBottom_toTopOf="@+id/textFilmLayoutRuntime"
                app:layout_constraintEnd_toEndOf="@+id/textFilmLayoutRuntime"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textFilmLayoutRuntime"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.807" />

            <TextView
                android:id="@+id/textFilmLayoutGenre"
                android:layout_width="215dp"
                android:layout_height="15dp"
                android:layout_marginBottom="220dp"
                android:gravity="left"
                android:text="genre"
                android:textColor="@color/colorAccent"
                android:textSize="10sp"
                android:fontFamily="@font/pt_sans_caption_regular"
                android:letterSpacing="0.05"
                android:autoSizeTextType="uniform"
                android:breakStrategy="balanced"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textFilmLayoutCountry"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textFilmLayoutCountry"
                app:layout_constraintTop_toBottomOf="@+id/textFilmLayoutCountry"
                app:layout_constraintVertical_bias="0.189" />

            <ImageView
                android:id="@+id/imageViewFilmLayoutPoster"
                android:layout_width="221dp"
                android:layout_height="348dp"
                android:layout_marginStart="96dp"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/gradient" />

            <Button
                android:id="@+id/buttonAddMovie"
                android:layout_width="36dp"
                android:layout_height="143dp"
                android:layout_marginTop="484dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                android:background="#0000"
                android:foreground="@drawable/add"
                android:text="+"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>